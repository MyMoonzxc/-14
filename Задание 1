#include <stdio.h>
#include<locale.h>
#define N 100

double* full_elements(double* ptr_array, int n);
int pech_elements(double* ptr_array, int n);
double* vicsl_elements(double* ptr_array, int n);

int main() {
    setlocale(LC_ALL, "RUS");
    double array[N];
    int size;

    printf("Введите размер массива > ");
    scanf("%d", &size);

    full_elements(array, size);
    pech_elements(array, size);
    vicsl_elements(array, size);
    pech_elements(array, size);

    return 0;
}

// Заполнение массива
double* full_elements(double* ptr_array, int n) {
    for (int i = 0; i < n; i++) {
        ptr_array[i] = i + 1;  
    }
    return ptr_array;
}

// Печать массива
int pech_elements(double* ptr_array, int n) {
    for (int i = 0; i < n; i++) {
        printf("%.1f ", ptr_array[i]);
    }
    printf("\n");
    return 0;
}

// Обработка массива - умножаем все элементы на 2
double* vicsl_elements(double* ptr_array, int n) {
    for (int i = 0; i < n; i++) {
        ptr_array[i] = ptr_array[i] * 2;
    }
    return ptr_array;
}
